<%= simple_form_for @project do |f| %>

<br><br>
  <div class="field">
  <div class="control">
    <%= f.input :name, label_html: { class: 'label' }, required: true, input_html: { class: "input" }, wrapper: false %>
  </div>
</div>

<div class="field">
  <div class="control">
    <%= f.input :description, input_html: { class: 'textarea', placeholder: 'What is the task features?' }, wrapper: false, label_html: { class: 'label' } %>
  </div>
</div>

<div class="field is-grouped">
  <div class="control">
    <%= f.button :submit, 'Create project', class: 'button is-link' %>
  </div>
  <div class="control">
    <button class="button is-text">Cancel</button>
  </div>
</div>
<% end %>